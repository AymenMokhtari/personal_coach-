<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/popup_element"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:drawable/dialog_holo_light_frame"
              android:orientation="vertical"
                android:layout_margin="15dp"
              android:padding="10sp"

    >
    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closewindowDistance"
        android:background="@drawable/deleteimgb"
        android:layout_marginLeft="50dp"
        android:layout_gravity="right"
      android:layout_margin="10dp"
        />

    <EditText
        android:background="@drawable/edittextstyle"
        android:hint="Distance target in KM"
        android:layout_marginTop="10dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/distanceTaregetText"
        android:inputType="number"
        />




    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/setDistanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:width="150dp"
        android:background="@drawable/btnraduis"
        android:textColor="@color/white"
        android:text="next"
        android:layout_gravity="center_horizontal"
        />



</LinearLayout>