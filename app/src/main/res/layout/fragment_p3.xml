<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bgblur">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"

        >



        <TextView

            android:id="@+id/text1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="What is your date of birth ?"
            android:textColor="@color/azur"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            />


    <EditText
        android:background="@drawable/edittextstyle"
        android:hint="Select your birthday"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/pickdate"
        android:focusable="false"
        />
        <TextView

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="What is your height ?"
            android:textColor="@color/azur"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:background="@drawable/edittextstyle"
            android:hint="Your height in cm"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/heightRegister"
            android:inputType="number"
            />


    TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="7dp"
        android:shadowColor="@color/white"
        android:layout_marginLeft="10dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="KG"
        android:textAllCaps="true"
        android:textColor="@color/azur"
        android:textSize="30sp"
        android:textStyle="bold"
        />




            <Button
                android:id="@+id/btngo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:width="150dp"
                android:background="@drawable/btnraduis"
                android:textColor="@color/white"
                android:text="next"
                android:layout_gravity="center_horizontal"
                />

    </LinearLayout>







</FrameLayout>
